<div class="row">
  <div class"col-md-12">
   <h2> Listado de Empleados </h2>
   <br>
 </div>
</div>

<div class="row">
<table class="table table-hover table-bordered">
 <tr>
  <th><strong> ID </strong></th>
  <th><strong> Empleado </strong></th>
  <th><strong> Nombre </strong></th>
  <th><strong> Genero </strong></th>
  <th><strong> Fecha de Nacimiento </strong></th>
  <th><strong> Puesto </strong></th>
  <th><strong> NSS </strong></th>
  <th><strong> Direccion </strong></th>
  <th><strong> Tipo Sanguineo </strong></th>
  <th></th>
</tr>
  {{#each employee}}
  <tr>
    <td>
    {{this._id}}
  </td>
  <td>
    <img width="100" heigth="100" src="{{this.foto}}" class="img-responsive"/><br>
    <div align="center"><small>#empleado: {{this.id_empleado}}</small></div>
  </td>
  <td>{{this.nombre}} {{this.a_paterno}} {{this.a_materno}}</td>
  <td>{{this.genero}}</td>
  <td>{{this.fecha_de_nacimiento}}</td>
  <td>{{this.puesto}}</td>
  <td>{{this.numss}}</td>
  <td>{{this.direccion}}</td>
  <td>{{this.tipo_sanguineo}}</td>
  <td>
  <form method="post" action="/employee/deleteemp?id={{this._id}}">
        <input name="id" type="hidden" value="{{this._id}}">
        <button type="submit" class="btn btn-default">Eliminar</button>
  </form>
  </td>
  </tr>
 {{/each}}
</table>
</div>


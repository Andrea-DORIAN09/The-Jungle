<div class="row">
  <div class"col-md-12">
   <h2> What species are you interested in? </h2>
   <h2 class="text-left"><p class=bg-info>{{title}}</h2>
   <br>
 </div>
</div>

<div class="row">
 <div class="col-md-12">
   <form action="/products" method="POST">
     <label for="name">Name</label>
     <input id="name" name="name" type="text-center"
     placeholder="Enter you favorite pet">
     <br>
     <br>
     <label for="photo">Photo</label>
     <input id="photo" name="photo" type="text-center"
     placeholder="Enter you favorite photo">
     <br>
     <br>
     <label for="stock">Stock</label>
     <input id="stock" name="stock" type="text-center"
     placeholder="Enter amount">
     <br> 
     <br> 
     <button type="submit" class="btn btn-primary"> Add Pet </button>
   </form>
 </div>
</div>

<div class="row">
  {{#each products}}
  <div class="col-md-4">
   <h2 class="text-center">{{this.name}}</h2>
   <img src="{{this.photo}}" class="img-responsive" alt="{{this.name}}"/>
   <p class="text-center"> Stock: {{this.stock}}</p>
 </div>
 {{/each}}

</div>

